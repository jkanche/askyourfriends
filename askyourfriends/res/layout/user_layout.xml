<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout android:id="@+id/relativeLayout1" android:layout_width="fill_parent" android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
        <TextView android:id="@+id/textView1" android:layout_alignParentTop="true" android:layout_height="wrap_content" android:text="Create a New User" android:layout_width="fill_parent" android:textStyle="bold"></TextView>
        <TableLayout android:layout_below="@+id/textView1" android:id="@+id/tableLayout1" android:layout_height="wrap_content" android:layout_alignLeft="@+id/textView1" android:layout_alignRight="@+id/textView1" android:layout_width="fill_parent">
            <TableRow android:id="@+id/tableRow1" android:layout_height="wrap_content" android:layout_width="fill_parent">
                <TextView android:id="@+id/textView2" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Enter Username"></TextView>
                <EditText android:layout_height="wrap_content" android:textSize="14.5sp" android:text="" android:id="@+id/username_new" android:layout_width="200dp"></EditText>
            </TableRow>
            <TableRow android:id="@+id/tableRow2" android:layout_height="wrap_content" android:layout_width="fill_parent">
                <TextView android:textSize="16sp" android:text="Enter Password " android:id="@+id/textView3" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                <EditText android:layout_height="wrap_content" android:password="true" android:textSize="14.5sp" android:layout_width="fill_parent" android:id="@+id/password_new"></EditText> 
            </TableRow>
            <TableRow android:id="@+id/tableRow3" android:layout_height="wrap_content" android:layout_width="fill_parent">
                <TextView android:textSize="16sp" android:text="Name" android:id="@+id/textView4" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
                <EditText android:layout_height="wrap_content" android:text="" android:textSize="14.5sp" android:layout_width="fill_parent" android:id="@+id/name_user_new"></EditText>
            </TableRow>
            <TableRow android:id="@+id/tableRow4" android:layout_height="wrap_content" android:layout_width="fill_parent">
                <Button android:layout_width="wrap_content" android:text="Create User" android:layout_height="wrap_content" android:id="@+id/create_user_new"></Button>
            </TableRow>
        </TableLayout>
    </RelativeLayout>

